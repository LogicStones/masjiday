@model Admin.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_UnAuthorized.cshtml";
    ViewBag.Title = "Forgot your password?";
}

<div class="auth">
    <div class="auth-header">
        <img src="~/img/logo/logo.png" style="height:150px; margin-bottom:55px;" />
        <h6>Enter your registered email address to receive password reset link.</h6>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 offset-md-4">

                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "txtEmail", placeholder = "Email", type = "Email" })

                            <div class="input-group-addon"><i class="ti-email"></i></div>
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <button type="submit" id="btnSendLink" class="btn btn-danger btn-block">Email Link</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Vendor JS -->
<script type="text/javascript" src="~/vendor/jquery/jquery-1.12.3.min.js"></script>
<script type="text/javascript" src="~/vendor/tether/js/tether.min.js"></script>
<script type="text/javascript" src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>